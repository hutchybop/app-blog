<% layout('layouts/boilerplate')%>

    <!-- Jumbotron -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="bg-danger rounded-3 mt-4 mb-3">
                    <div class="container-fluid py-3">
                        <h1 class="display-5 fw-bold">
                            <span>
                                <i class="fas fa-swimmer"></i>
                                <i class="fas fa-biking"></i>
                                <i class="fas fa-running"></i>
                            </span>
                            My Ironman Blog
                        </h1>
                        <p class="col-md-12 fs-4">
                            A blog about my Ironman trialthon journey. Follow me from my first day of training to the big
                            day.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                      Sort
                    </button>
                    <div class="dropdown-menu">
                      <a class="dropdown-item" href="/?sort=oldest#sortAnchor">Oldest to Newest</a>
                      <a class="dropdown-item" href="/?sort=newest#sortAnchor">Newest to Oldest</a>
                    </div>
                  </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <% for( p of posts) { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card mt-4 mb-3">
                        <div class="card-header">
                            <h4 class="card-title"> <%= p.title %> </h4>
                        </div>
                        <img class="card-img-top" src=" <%= p.img %> " alt="Image not found">
                        <div class="card-body">
                            <div class="caption">
                                <p class="postText">
                                    <%= p.post %>
                                </p>
                                <a href='/blogim/<%= p._id %>' class="btn btn-primary">View Post</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
