<% layout('admin/adminBoilerplate') %>

<% if (flaggedReviews.length === 0) { %>
    <div class="alert alert-info">
        <h4>No flagged reviews to review</h4>
        <p>All reviews are currently clean!</p>
    </div>
<% } else { %>
    <% flaggedReviews.forEach(review => { %>
        <% 
            let borderColor = 'border-warning';
            let headerBg = 'bg-warning text-dark';
            if (review.spamScore >= 10) {
                borderColor = 'border-danger';
                headerBg = 'bg-danger text-white';
            } else if (review.spamScore >= 3 && review.spamScore < 10) {
                borderColor = 'border-warning';
                headerBg = 'bg-warning text-dark';
            } else if (review.spamScore >= 1 && review.spamScore < 3) {
                borderColor = 'border-success';
                headerBg = 'bg-success text-white';
            }
        %>
        <div class="card mb-3 <%= borderColor %>">
            <div class="card-header <%= headerBg %>">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Spam Score:</strong> <%= review.spamScore %> | 
                        <strong>Flagged:</strong> <%= review.createdAt.toLocaleDateString() %>
                    </div>
                    <div>
                        <span class="badge bg-light text-dark">Requires Review</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h6>Review Content:</h6>
                        <p class="border p-3 bg-light"><%= review.body %></p>
                        
                        <% if (review.flagReason) { %>
                            <h6>Flag Reason:</h6>
                            <p class="text-warning"><%= review.flagReason %></p>
                        <% } %>
                    </div>
                    <div class="col-md-4">
                        <h6>Metadata:</h6>
                        <ul class="list-unstyled">
                            <li><strong>Author:</strong> <%= review.author ? review.author.username : 'Anonymous' %></li>
                            <li><strong>IP Address:</strong> <%= review.ipAddress || 'N/A' %></li>
                            <li><strong>Created:</strong> <%= review.createdAt.toLocaleString() %></li>
                        </ul>
                        
                        <div class="mt-3">
                            <form action="/admin/flagged-reviews/<%= review._id %>/approve" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form action="/admin/flagged-reviews/<%= review._id %>/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this review?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
<% } %>