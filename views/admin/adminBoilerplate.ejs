<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3><%= title %></h3>
                    <div>
                        <a href="/admin" class="btn btn-outline-primary">Dashboard</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Quick Stats -->
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Total Posts</h5>
                                    <h2 class="card-text"><%= posts.length %></h2>
                                    <a href="/admin/posts" class="btn btn-light btn-sm">Manage Posts</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body">
                                    <h5 class="card-title">Flagged Reviews</h5>
                                    <h2 class="card-text"><%= flaggedReviewsCount %></h2>
                                    <a href="/admin/flagged-reviews" class="btn btn-dark btn-sm">Review Now</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">All Reviews</h5>
                                    <h2 class="card-text"><%= allReviewsCount %></h2>
                                    <a href="/admin/all-reviews" class="btn btn-light btn-sm">Manage All</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Quick Actions</h5>
                                    <div class="btn-group-vertical">
                                        <a href="/admin/posts/new" class="btn btn-light btn-sm mb-2">Create New Post</a>
                                        <a href="/blogim" class="btn btn-light btn-sm">View Blog</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Page Specific Content -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5><%= typeof contentTitle !== 'undefined' ? contentTitle : title %></h5>
                                </div>
                                <div class="card-body">
                                    <%- body %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>